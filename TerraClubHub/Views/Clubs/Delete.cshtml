@model TerraClubHub.Models.Club

@{
    ViewData["Title"] = "Delete Club";
}

<h2 class="heading-custom">Delete Club</h2>

<h3 class="text-center text-warning">Are you sure you want to delete this?</h3>

<div class="form-custom">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
