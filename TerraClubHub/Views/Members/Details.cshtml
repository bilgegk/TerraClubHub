@model TerraClubHub.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<h2 class="heading-custom">Member Details</h2>

<div class="form-custom">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Surname</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
    </dl>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
